@model IEnumerable<FlowHouse.Models.Nakup>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Polozka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zakaznik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prodavac)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Polozka.Nazev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zakaznik.Jmeno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prodavac.Jmeno)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NakupID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NakupID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NakupID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
