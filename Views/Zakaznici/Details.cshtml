@model FlowHouse.Models.Zakaznik

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Zakaznik</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Jmeno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Jmeno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prijmeni)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prijmeni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatumRegistrace)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumRegistrace)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nakupy)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Název polozky</th>
                    <th>Cena</th>
                </tr>
                @foreach (var item in Model.Nakupy)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Polozka.Nazev)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Polozka.Cena)
                        </td>
                    </tr>
                }
            </table>
        </dd>


    </dl>
   </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ZakaznikID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
